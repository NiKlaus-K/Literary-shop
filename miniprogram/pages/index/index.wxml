<!--miniprogram/pages/index/index.wxml-->
<view id="container">
  <view id='banner'>
      <swiper indicator-dots="{{true}}" indicator-color="#ffffff" autoplay="true" circular="true" indicator-active-color="#3498db" previous-margin="4px" next-margin="4px">
        <block wx:for="{{banner}}" wx:key="banner">
          <swiper-item>
            <image src='{{item}}'mode="aspectFill" style="width:100%;height:100%;" />
          </swiper-item> 
        </block>
      </swiper>
  </view>


</view>